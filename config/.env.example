# Provider selection: 'openai' or 'azure'
PROVIDER=openai

# OpenAI credentials
OPENAI_API_KEY=sk-...

# Optional: override model and base url
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=

# Azure credentials (if using azure)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# HTTP + retry settings
HTTP_TIMEOUT_SECONDS=30
MAX_RETRIES=2
BACKOFF_INITIAL=0.5

# Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging
LOG_FILE=logs/reasoner.log

# --- Phase 2: Decision Logging & Notifications ---
# Postgres async DSN for storage (required for --persist)
POSTGRES_URI=postgresql+asyncpg://user:pass@localhost:5432/yourdb

# Slack/Discord webhook URLs
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Notification filtering and concurrency
NOTIFY_LEVEL=info  # info|warn|all
MIN_WARN_CONFIDENCE=0.7
REQUIRE_ALERT_ON_FALLBACK=true
NOTIFIER_MAX_CONCURRENCY=4
NOTIFIER_HTTP_TIMEOUT=10
NOTIFIER_RETRIES=3
NOTIFIER_BACKOFF=0.5

# Telegram (already above)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=

# Logging
LOG_LEVEL=INFO
