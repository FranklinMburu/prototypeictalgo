# Example logging config for log retention/shipping
# This config rotates logs daily, keeps 14 days, and can be extended for log shipping (e.g., to ELK, Loki, or S3)

[loggers]
keys=root

[handlers]
keys=rotatingFileHandler

[formatters]
keys=default

[logger_root]
level=INFO
handlers=rotatingFileHandler

[handler_rotatingFileHandler]
class=handlers.TimedRotatingFileHandler
level=INFO
formatter=default
args=("/var/log/ict_trading_system/app.log", "midnight", 1, 14)

[formatter_default]
format=%(asctime)s %(levelname)s %(name)s %(message)s
